/* components/areaPicker/areaPicker.wxss */

.pickerWrapper {
  width: 100%;
  overflow: hidden;
  position: relative;
}

.pickerWrapper::after {
  position: absolute;
  content: '';
  left: 0;
  top: 0;
  width: 100%;
  height: 1rpx;
  background: #ccc;
  transform: scaleY(0.5);
}

.pickerWrapper .top {
  width: 100%;
  background: #f0f0f0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.pickerWrapper .btn {
  padding: 24rpx;
  color: #157efc;
  font-size: 28rpx;
}

.pickerWrapper .item {
  line-height: 40px;
  text-align: center;
}
