/* components/bannerAlone/bannerAlone.wxss */
.bannerWrap{
  width: 100%;
  position: relative;
}
.bannerWrap::after{
  position: absolute;
  content: '';
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1rpx;
  background: #f4f4f4;
  transform: scaleY(0.5);
}
.bannerWrap .imgWrap{
  min-height: 60rpx;
}