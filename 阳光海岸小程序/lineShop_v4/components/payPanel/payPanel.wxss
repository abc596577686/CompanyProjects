/* components/payPanel/payPanel.wxss */

.topLine {
  position: relative;
}

.topLine::after {
  position: absolute;
  content: '';
  left: 0;
  right: 0;
  top: 0;
  height: 1rpx;
  background: #ccc;
  transform: scaleY(0.5);
}

.payPanel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 100;
  transform: translate3d(0, 100%, 0);
}

.topWrap{
  padding: 36rpx 15rpx;
  position: relative;
}

.payPanel .content .item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 36rpx 15rpx;
  color: #666;
  font-size: 28rpx;
}
.payPanel .content  .price{
  color: #FB4A4C;
}

.payPanel .content .item .label{
  display: flex;
  align-items: center;
}
.payPanel .content .item .label .logo {
  width: 42rpx;
  margin-right: 36rpx;

}

.payPanel .content .handle .icon{
  width: 36rpx;
}

.title{
  font-size: 30rpx;
  color: #666;
  margin-left: 10rpx;
}

.btnWrap {
  width: 100%;
  padding: 20rpx 28rpx;
}

.btnWrap .btn {
  width: 100%;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 30rpx 0;
  background-color: #FB4A4C;
  text-align: center;
  color: #fff;
}

.closeBtn{
  width: 26rpx;
  padding: 16rpx;
  box-sizing: content-box;
  position: absolute;
  top: 20rpx;
  right: 10rpx;
}
