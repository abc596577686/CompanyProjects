/* pages/addressDetail/addressDetail.wxss */
page{
  padding-bottom: 130rpx;
}

.item {
  height: 98rpx;
  padding-left: 27rpx;
  font-size: 28rpx;
  background-color: #fff;  
}

.item input {
  width: 100%;
  height: 100%;
}

.item .add {
  width: 100%;
  height: 100%;
  padding: 36rpx 0;
  font-size: 28rpx;
}

.item .add.placeholder{
  color: #666;
}

.item-last {
  display: flex;
  justify-content: space-between;
  padding-right: 31rpx;
  align-items: center;
  color: #666;
  font-size: 26rpx;
}

/* switch {
  height: 44rpx;
  width: 73rpx;
} */

.idHeader {
  height: 98rpx;
  line-height: 98rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #fff;
  padding-left: 27rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.idMain {
  height: 370rpx;
  background-color: #fff;
  padding: 47rpx 24rpx 45rpx 24rpx;
  display: flex;
  flex-direction: row;
}

.main-left {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding-right: 5rpx;
}

.imgBox {
  width: 338rpx;
  height: 214rpx;
  margin-bottom: 41rpx;
  position: relative;
  border: 1rpx dashed #ccc;
}

.userImg {
  width: 100%;
  height: 100%;
}

.idName {
  color: #666;
  font-size: 24rpx;
}

.btn {
  width: 124rpx;
  height: 47rpx;
  color: #fff;
  border-radius: 30rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -62rpx;
  margin-top: -23rpx;
  text-align: center;
  line-height: 47rpx;
  background-color: #000;
  opacity: 0.5;
}

.main-right {
  padding-left: 5rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.info {
  padding-top: 26rpx;
  padding-left: 77rpx;
  padding-bottom: 37rpx;
  background-color: #fff;
  margin-top: 19rpx;
}

.info-header {
  color: #666;
  font-size: 28rpx;
  line-height: 47rpx;
  height: 47rpx;
  display: felx;
  align-items: center;
  position: relative;
  margin-bottom: 10rpx;
}

.info-main {
  color: #666;
  font-size: 26rpx;
  line-height: 26rpx;
  padding-right: 39rpx;
}

.mainInfo {
  line-height: 1.3;
}

.problem {
  width: 34rpx;
  height: 34rpx;
  vertical-align: text-bottom;
  position: absolute;
  left: -45rpx;
  bottom: 50%;
  margin-bottom: -17rpx;
}

.warn {
  color: #FB4A4C;
  line-height: 1.5;
}

.del {
  height: 98rpx;
  color: #FB4A4C;
  font-size: 28rpx;
  background-color: #fff;
  margin-top: 18rpx;
  padding-left: 27rpx;
  line-height: 98rpx;
}

.footer {
  height: 116rpx;
  background-color: #fff;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  /* margin-top: 60rpx; */
  position: fixed;
  bottom: 0;
  z-index: 10;
}

.save {
  width: 686rpx;
  height: 74rpx;
  background-color: #FB4A4C;
  color: #fff;
  line-height: 74rpx;
}

.placeStyle {
  color: #666;
  font-size: 28rpx;
}

/*
  区域选择器
  */

.pickerContainer {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  transform: translate3d(0, 100%, 0);
  z-index: 100;
  background: #fff;
  opacity: 0;
}

/* 遮罩层  */

.maskLayer {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.70);
  z-index: 50;
  opacity: 0;
}
.textArea {
  height: 120rpx;
  padding-top : 20rpx;
  padding-bottom : 20rpx;
}
.addDetail {
  height: 100%;
}
