/*
  tabBar
  */

.tabContainer {
  position: relative;
}

.tabContainer .seeMoreWrap {
  position: absolute;
  right: 0;
  top: 0;
  width: 28rpx;
  padding: 28rpx 35rpx;
  box-sizing: content-box;
  z-index: 20;
  background: -webkit-linear-gradient(left, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 1) 30rpx);
}

.tabContainer .icon {
  width: 100%;
}

.tabContainer .tabWrap {
  white-space: nowrap;
  width: 100%;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.8);
  overflow: hidden;
  /* top: 0; *//* left: 0; */
  z-index: 10;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.tabContainer .tabBox {
  width: 160rpx;
  display: inline-block;
  font-size: 28rpx;
  text-align: center;
  overflow: hidden;
  flex: 1;
}

.tabContainer .tabItem {
  height: 88rpx;
  line-height: 88rpx;
  color: #333;
  /* transition: all 0.3s; */
}

.tabContainer .tabItem.active {
  color: #000;
  /* font-weight: bold; */
  position: relative;
}

.tabContainer .tabItem.active::after {
  position: absolute;
  content: '';
  bottom: 0;
  left: 0;
  width: 100%;
  height: 8rpx;
  background: #fdd215;
  transform: scaleX(0.5);
}

.headWrap{
  min-height: 200rpx;
}

/*
  goodsList
  */

.themeGoods {
  background: rgba(255, 255, 255, 0.5);
}

.themeGoodsBox {
  width: 100%;
  overflow: hidden;
}

.fixed {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.8);
}

/*
  hideHeadWrap  
*/

.hideContainer {
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 100;
  opacity: 0;
}

.hideHeadWrap {
  position: fixed;
  top: -50%;
  left: 0;
  right: 0;
  background: #fff;
}

.hideHeadWrap .titleWrap {
  padding: 14rpx 44rpx;
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color: #333;
  position: relative;
}

.hideHeadWrap .titleWrap::after {
  position: absolute;
  content: '';
  width: 100%;
  height: 1rpx;
  bottom: 0;
  left: 0;
  background: #ccc;
  transform: scaleY(0.5);
}

.hideHeadWrap .imgWrap {
  width: 28rpx;
  padding: 20rpx;
  box-sizing: content-box;
  margin-right: -22rpx;
}

.hideHeadWrap .icon {
  width: 100%;
}

.hideHeadWrap .tabList {
  overflow: hidden;
  font-size: 0;
  padding: 30rpx 20rpx;
}

.hideHeadWrap .tabItem {
  display: inline-block;
  font-size: 24rpx;
  color: #333;
  padding: 20rpx 30rpx;
  width: 25%;
  text-align: center;
}

.hideHeadWrap .tabItem.active {
  color: #FB4A4C;
}

