/* pages/community/community/answer/answer.wxss */
.bg {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  background-color: black;
  opacity: 0.50;
}
.bger {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 13;
}
.container {
  width: 100%;
  height: 100%;
  padding-bottom: 100rpx;
}
.good-item {
  height: 180rpx;
  width: 100%;
  margin: 1rpx 0;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  margin-bottom: 5rpx;
}
.img-box {
  width: 190rpx;
  height: 100%;
  /* background-color: red; */
  display: flex;
  justify-content: center;
  align-items: center;
}
.good-img {
  height: 144rpx;
  width: 144rpx;
  /* background-color: hotpink; */
}
.good-info {
  width: 560rpx;
  height: 100%;
  padding-top: 36rpx;
  color: #333;
  font-size: 28rpx;
  padding-right: 100rpx;
  position: relative;
}
.seeMore {
  position: absolute;
  width: 14rpx;
  height: 24rpx;
  top: 50%;
  right: 28rpx;
  margin-top: -12rpx;
}

.qus-icon,.an-icon {
  height: 30rpx;
  width: 30rpx;
  display: inline-block;
  background-color: #FE5000;
  text-align: center;
  line-height: 30rpx;
  color: #fff;
  font-size: 20rpx;
  margin-right: 30rpx;
  border-radius: 2rpx;
  
}
.an-icon {
  background-color: #67CCCC;
}
.question {
  font-size: 30rpx;
  color: #333;
  /* display: flex; */
  /* justify-content: flex-start; */
  background-color: #fff;
  padding: 30rpx 22rpx;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: flex;
}

.answerList {
  background-color: #fff;
  height: 100%;
}
.an-header {
  border-bottom: 1rpx solid #f0f0f0;
  padding: 30rpx 22rpx;
  display: flex;
}
.an-item {
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}
.userInfo {
  padding: 0 22rpx;
}
.userHead {
  width: 80rpx;
  height: 80rpx;
  /* background-color: yellowgreen; */
  border-radius: 50%;
  margin-right : 30rpx;
}
.userTop {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 15rpx;

}
.time {
  color: #999;
  font-size: 22rpx;
  padding-left: 110rpx;
}
.an-info {
  padding : 30rpx;
  padding-left: 132rpx;
  word-wrap: break-word; 
  word-break: normal; 
   
}
.copyBox {

  display: flex;
  justify-content: flex-end;
  padding: 20rpx 22rpx;
}
.copy {
  width: 108rpx;
  height: 48rpx;
  border: 1rpx solid #c9c9c9;
  text-align: center;
  line-height: 48rpx;
  color: #999;
  border-radius: 2rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  padding: 12rpx 26rpx;
  /* z-index: 12; */
  
}

.foot-inp {
  height: 100%;
  border: 2rpx #c9c9c9 solid;
  border-radius: 5rpx;
  font-size: 28rpx;
  color: #999;
  padding-left: 26rpx;
  padding-top: 20rpx;
  overflow: hidden;
}
.foot-area {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  background-color: #fff;
  padding: 20rpx 18rpx;
  padding-bottom: 50rpx;
  opacity: 1;
}
.foot-area textarea {
  height: 80%;
  width: 100%;
  border: 2rpx #c9c9c9 solid;
  border-radius: 5rpx;
  font-size: 28rpx;
  color: #333;
  padding: 24rpx;
}
.btnBox {
  display: flex;
  justify-content: flex-end;
  padding-top:50rpx;
  height: 20%;
  align-items: center;
}
