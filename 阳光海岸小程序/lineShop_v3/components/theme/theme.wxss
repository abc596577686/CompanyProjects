/* components/theme/theme.wxss */

.topWrap {
  position: relative;
}

.topWrap::after {
  position: absolute;
  content: '';
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1rpx;
  background: #f4f4f4;
  transform: scaleY(0.5);
}

.themeWrap .topImage {
  width: 100%;
}

.themeWrap .themeScrollWrap {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
}

.scroll-view-item {
  width: 208rpx;
  padding: 10rpx 10rpx;
  display: inline-block;
}

.scroll-view-item.more {
  width: 220rpx;
  vertical-align: middle;
  font-size: 26rpx;
}

.goodsMore {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  position: relative;
}

.goodsMore::after {
  position: absolute;
  content: '';
  left: 0;
  top: 0;
  width: 200%;
  height: 200%;
  border: 1px solid #999999;
  overflow: hidden;
  transform: scale(0.5);
  transform-origin: left top;
}

.goodsMore .line {
  width: 100%;
  height: 1rpx;
  position: relative;
  margin: 15rpx 0;
}

.goodsMore .line::after{
  position: absolute;
  content: '';
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: #999;
  transform: scaleY(.5)
}

.goodsMore .title{
  font-size: 26rpx;
  color: #FB4A4C;
}

.goodsItem {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.imageWrap {
  position: relative;
  width: 100%;
  margin-bottom: 8rpx;
  text-align: center;
}

.goodsImage {
  width: 76%;
  display: inline-block;
}

.secKill {
  position: absolute;
  bottom: 8rpx;
  left: 0rpx;
  color: #fb4a4c;
  font-size: 22rpx;
  padding: 5rpx;
}

.secKill::after {
  position: absolute;
  content: '';
  width: 200%;
  height: 200%;
  left: 0;
  top: 0;
  border: 1rpx solid #fb4a4c;
  transform: scale(0.5);
  transform-origin: -1rpx -1rpx;
}

.goodsText {
  white-space: normal;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}

.goodsText {
  font-size: 24rpx;
  line-height: 1.3;
  overflow: hidden;
  color: #333;
  /* height: 60rpx; */
}

.price {
  color: #fb4a4c;
  font-size: 32rpx;
}
