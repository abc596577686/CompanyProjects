/* pages/userCenter/allOrder/allOrder.wxss */
.container {
  margin-top: 100rpx;
}

.tab {
  height: 80rpx;
  background-color: #fff;
  display: flex;
  margin-bottom: 2rpx;
}

.allOrder, .homeOrder {
  width: 50%;
  height: 100%;
  text-align: right;
  font-size: 32rpx;
  color: #333;
  padding: 0 40rpx;
  padding-top: 15rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-end;
}

.liner {
  width: 70rpx;
  height: 0;
  border: 2rpx solid #333;
  margin-top: 15rpx;
  border-radius: 15rpx;
  display: inline-block;
}

.sel {
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.homeOrder {
  justify-content: flex-start;
}

.searchBox {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  height: 100rpx;
  position: relative;
  margin: 1rpx 0;
}

.search-icon {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  left: 61rpx;
}

.search {
  width: 617rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #f0f0f0;
  padding-left: 85rpx;
  margin-left: 19rpx;
  color: #999;
  font-size: 26rpx;
}

.searchBtn text {
  font-size: 28rpx;
  color: #666;
  margin-left: 28rpx;
}

.status {
  height: 83rpx;
  display: flex;
  flex-direction: row;
  align-items: cneter;
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 10;
}

.status .status-item {
  flex: 1;
  display: inline-block;
  height: 100%;
  text-align: center;
  line-height: 83rpx;
  background-color: #fff;
  color: #666;
  position: relative;
}

.status-item .line ,
.tabBox .line {
  position: absolute;
  bottom: 0;
  width: 58rpx;
  height: 0;
  border-top: 4rpx solid #FB4A4C;
  left: 50%;
  margin-left: -29rpx;
}

.order-item {
  background-color: #fff;
  margin-top: 1rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 1rpx 5rpx #ddd;
}

.order-header {
  height: 69rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #999;
  font-size: 22rpx;
  padding: 0 28rpx;
  border-bottom: 1rpx solid #f0f0f0;
}


.tabWrap {
  white-space: nowrap;
  width: 100%;
  height: 88rpx;
  background: #fff;
  overflow: hidden;
}

.tabBox {
  line-height: 88rpx;
  width: 160rpx;
  display: inline-block;
  font-size: 28rpx;
  text-align: center;
  overflow: hidden;
  position: relative;
}

.tabItem {
  height: 88rpx;
  line-height: 88rpx;
  color: #333;
  /* transition: all 0.3s; */
}
.tabItem.active {
  color: #000;
  font-weight: bold;
  position: relative;
}

.tabItem.active::after {
  position: absolute;
  content: '';
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: #fdd215;
  transform: scaleX(0.5);
}
.order-status {
  color: #fe5000;
  font-size: 26rpx;
}

.order-main {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-bottom: 20rpx;
  padding-right: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}
.order-num {
  font-size: 26rpx;
}

.order-num{
  font-size: 28rpx;
}

.imgBox {
  width: 136rpx;
  margin: 15rpx;
  margin-bottom:5px;
  margin-right: 15rpx;
}

.good-img {
  width: 100%;
  /* height: 118rpx; */
  background-color: #ccc;
  /* margin-left: 46rpx; */
}

.good-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-right: 30rpx; 
  
  /* margin-top:20rpx; */
}

.refundStatusName{
  position: absolute;
  bottom: 10rpx;
  right: 30rpx;
  color: #fe5000;
  font-size: 24rpx;
}

.good-name {
  height: 74rpx;
  line-height: 1.3;
  color: #666;
  font-size: 28rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
}
.tagsBox {
  margin-top: 10rpx;
}

.good-info .tags{
  font-size: 24rpx;
  padding: 4rpx 10rpx;
  /* margin-top: 10rpx; */
  background: #f0f0f0;
  color: #666;
}

.weight {
  color: #999;
  font-size: 22rpx;
  margin-right: 20rpx;
}

.cate {
  color: #999;
  font-size: 22rpx;
}

.good-price {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  color: #787878;
  font-size: 26rpx;
  margin-top: 30rpx;
}

.good-price .num{
  margin-top:6rpx;
}

.order-handle {
  display: flex;
  flex-direction: row;
  margin-left: 144rpx;
  justify-content: flex-end;
}

.order-handle .btns{
  width: auto;
}

.order-footer {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goodDetail {
  color: #666;
  font-size: 22rpx;
  display: flex;
  padding-right: 24rpx;
  justify-content: flex-end;
  align-items: center;
  /* height: 82rpx; */
  margin: 20rpx 0;
}

.money {
  font-size: 26rpx;
}

.goodDetail text {
  margin-left: 5rpx;
  font-size: 26rpx;
}

.goodDetail .refundMoney {
  margin-left:5rpx;
  font-size:29rpx;
  color:#666;
  margin-right:6rpx;
}

.btn-one, .btn-two {
  width: 136rpx;
  height: 48rpx;
  display: inline-block;
  /* border: 1rpx solid #c9c9c9; */
  text-align: center;
  line-height: 48rpx;
  /* margin-right: 20rpx; */
  margin: 0 15rpx 15rpx 15px;
  font-size: 26rpx;
  color: #666;
  position: relative;
}
.btn-one::after,.btn-two::after,.red::after {
  content: '';
  position: absolute;
  width: 200%;
  height: 200%;
  top: 0;
  left: 0;
  border: 1rpx solid #666;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  transform-origin: 0 0;
}

.red::after{
  border-color: #F84C51;
}
.red {
   color: #F84C51;
}

.order-item .icon {
  text-align: center;
  padding: 3rpx 8rpx;
  background-color: #fe4846;
  color: #fff;
  font-size: 22rpx;
  margin-left: 10rpx;
}


/*
  支付面板
*/

.topLine {
  position: relative;
}

.topLine::after {
  position: absolute;
  content: '';
  left: 0;
  right: 0;
  top: 0;
  height: 1rpx;
  background: #f0f0f0;
  transform: scaleY(0.5);
}

.payPanel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 100;
   transform: translate3d(0, 100%, 0); 
}

.topWrap{
  padding: 36rpx 15rpx;
  position: relative;
}

.payPanel .content .item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 36rpx 15rpx;
  color: #666;
  font-size: 28rpx;
}
.payPanel .content  .price{
  color: #FB4A4C;
  font-size:34rpx;
}

.payPanel .content .item .label{
  display: flex;
  align-items: center;
}
.payPanel .content .item .label .logo {
  width: 42rpx;
  margin-right: 36rpx;

}

.payPanel .content .handle .icon{
  width: 36rpx;
}

.title{
  font-size: 30rpx;
  color: #666;
  margin-left: 10rpx;
}

.btnWrap {
  width: 100%;
  padding: 20rpx 28rpx;
}

.btnWrap .btn {
  width: 100%;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 30rpx 0;
  background-color: #fb4a4c;
  text-align: center;
  color: #fff;
}

.closeBtn{
  width: 26rpx;
  padding: 16rpx;
  box-sizing: content-box;
  position: absolute;
  top: 20rpx;
  right: 10rpx;
}


.maskLayer {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.70);
  z-index: 50;
  opacity: 0;
}

.placeholder{
  font-size: 26rpx;
  color: #999;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 400rpx; 
}
.newOrder {
  width: 160rpx;
  margin-bottom: 30rpx;

}

.endWrap{
  width: 100%;
  height: 120rpx;
  position: relative;
}
.endImg{
  width: 40rpx;
  /* height: 40rpx; */
  position: absolute;
  top: 30rpx;
  left: 355rpx;
}
