/* components/tabBar/tabBar.wxss */


/*tabbar  */

.tabBarWrap {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  background: #fff;
}

.tabBarWrap::after{
  position: absolute;
  content: '';
  top: 0;
  width: 100%;
  height: 1rpx;
  background: #979797;
  transform: scaleY(.5);
}

.tabItem {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* padding-top: 10rpx; */
}

.imgWrap {
  width: 40rpx;
  height: 40rpx;
  margin: 12rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.widthFix{
  width: 100%;
}

.text{
  font-size: 18rpx;
  color: #333;
   margin-bottom: 6rpx;
  display: block;
}