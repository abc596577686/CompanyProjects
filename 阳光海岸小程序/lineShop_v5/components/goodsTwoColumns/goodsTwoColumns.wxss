/* components/goodTwoColumns/goodTwoColumns.wxss */

.goodsListWrap{
  width: 100%;
  font-size: 0;
  padding: 5rpx 0;
  background: #f4f4f4;
  overflow: hidden;
}
.goodsWrap{
  display: block;
  float: left;
  width: 50%;
  /* height: 450rpx; */
}
.goodsWrap:nth-child(2n+1){
   padding: 5rpx 5rpx 5rpx 10rpx;
}
.goodsWrap:nth-child(2n){
  padding: 5rpx 10rpx 5rpx 5rpx;
}
.goods{
  background: #fff;
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: center;
  padding: 20rpx 18rpx;
}
.goodsImgWrap{
  position: relative;
  width: 100%;
  margin-bottom: 8rpx;
  text-align: center;
  height: 256rpx;
  overflow: hidden;
}
.goodsImg{
  width: 76%;
  display: inline-block;
  margin-bottom: 10rpx;
}
.goodsText{
  font-size: 24rpx;
  height: 40rpx;
  
}


.secKill {
  position: absolute;
  bottom: 8rpx;
  left: 0rpx;
  color: #2EA7E0;
  font-size: 22rpx;
  padding: 5rpx;
  margin-left: 5rpx;
}

.secKill::after {
  position: absolute;
  content: '';
  width: 200%;
  height: 200%;
  left: 0;
  top: 0;
  border: 1rpx solid #2EA7E0;
  transform: scale(0.5);
  transform-origin: -1rpx -1rpx;
}

.goodsText {
  white-space: normal;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}

.goodsText {
  font-size: 24rpx;
  height: 60rpx;
  line-height: 1.3;
  overflow: hidden;
  color: #333;
  /* height: 60rpx; */
}

.price {
  color: #FB4A4C;
  font-size: 32rpx;
  /* height: 40rpx; */
}
.goodsFooter {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  justify-content: space-between; 
  align-items: center;
  height: 60rpx;
}
.groupNum {
  color: #999;
  font-size: 24rpx;
  margin-left: 10rpx; 
}
.imgBox {
  display: flex;
  flex-direction: row;
  flex: 1;
  margin-left: 20rpx;
  height: 60rpx;
  align-items: center;
  position: relative;
}
.imgBox .img {
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
}
.imgBox .img:nth-child(1) {
  top: 0;
  left :0;
  z-index: 11
}
.imgBox .img:nth-child(2) {
  top: 0;
  left : 30rpx;
  z-index: 10;
}
.imgBox .img image {
  width: 100%;
}