  font-size: 26rpx;
  padding: 20rpx 0;
  line-height: 30rpx;
  display: flex;
  flex-direction: column;
}
.name-top {
  margin-bottom: 30rpx;
}
.goodTags {
  font-size: 24rpx;
  padding: 4rpx 10rpx;
  background: #f0f0f0;
  color: #666;
}
.goodNum {
  width: 536rpx;
  display: flex;
  justify-content: flex-end;
  color: #999;
  font-size: 26rpx;
