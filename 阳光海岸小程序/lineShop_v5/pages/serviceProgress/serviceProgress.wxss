/* pages/refund/refund.wxss */
page{
  padding-bottom: 80rpx;
}
.header {
  height: 170rpx;
  background-color: #fff;
  margin-top: 1rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
  padding: 0 27rpx;
}

.status-item {
  width: 104rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: #2EA7E0;
  position: relative;
}

.refundImgs{
  display: flex;
  flex-direction: row;
}
.refundImgs .imgWrap{
  width: 100rpx;
  min-height: 100rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.refundCir {
  height: 95rpx;
  display: flex;
  align-items: center;
}

.status-no {
  color: #d9d9d9;
}

/*圖標樣式  */

.base-cir {
  position: relative;
}

.base-cir::after {
  content: '';
  position: absolute;
  width: 125rpx;
  height: 0;
  border-top: 1rpx dashed #2EA7E0;
  top: 50%;
  left: -125rpx;
  margin-top: -1rpx;
}

.base-cirno::after {
  border-color: #ddd;
}

.base-circle::after {
  content: '';
  position: absolute;
  width: 274rpx;
  height: 0;
  border-top: 1rpx dashed #2EA7E0;
  top: 50%;
  left: -274rpx;
  margin-top: -1rpx;
}

.base-circleno::after {
  border-color: #ddd;
}

/*  */

.circle, .circler {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #fff;
  border: 2rpx solid #2EA7E0;
  /* margin-bottom: 32rpx; */
  position: relative;
}

.circle::after, .circler::after {
  content: '';
  position: absolute;
  width: 131rpx;
  height: 0;
  border-top: 1rpx dashed #2EA7E0;
  top: 50%;
  margin-top: -1rpx;
  left: -132rpx;
}

.circler::after {
  width: 280rpx;
  left: -280rpx;
}

.no {
  border: 1rpx solid #d9d9d9;
}

.no::after {
  border-top: 1rpx dashed #ddd;
}

.status-item:nth-child(1) .circle::after,
.status-item:nth-child(1) .circler::after {
  display: none;
}

.statusStep {
  /* height: 225rpx; */
  padding: 40rpx 25rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.base {
  display: inline-block;
  margin-right: 13rpx;
  vertical-align: middle;
  margin-bottom: 4rpx;
}

/*闹钟  */

.clock {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  background-color: #fff;
  border: 1rpx solid #61d2fe;
  border-radius: 50%;
  margin-right: 10rpx;
  position: relative;
  vertical-align: middle;
}

.clock::after, .clock::before {
  content: '';
  position: absolute;
  width: 8rpx;
  border: 1rpx solid #61d2fe;
  top: 50%;
  left: 50%;
  margin-left: -1rpx;
}

.clock::before {
  transform: rotate(-90deg);
  transform-origin: left top;
}

.box {
  width: 32rpx;
  height: 32rpx;
  display: inline-block;
  text-align: center;
  line-height: 32rpx;
}

.dot {
  display: inline-block;
  width: 8rpx;
  height: 8rpx;
  background-color: #ddd;
  border-radius: 50%;
  vertical-align: middle;
}

.one {
  color: #333;
  font-size: 30rpx;
}

.two {
  font-size: 28rpx;
  color: #666;
}

.time {
  font-size: 26rpx;
  color: #666;
}

.goodInfo {
  height: 176rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}

.imgBox {
  width: 186rpx;
  height: 100%;
